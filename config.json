{
    "$schema": "./schema.json",
    "update": "https://raw.githubusercontent.com/hbk01/MirrorCN/master/config.json",
    "list": [
        {
            "name": "pacman",
            "first": [
                "pacman --version"
            ],
            "end": [
                "pacman -Syy"
            ],
            "files": [
                "/etc/pacman.d/mirrorlist"
            ],
            "mirrors": [
                "https://mirrors.tuna.tsinghua.edu.cn/manjaro/stable/$repo/$arch"
            ],
            "format": [
                "",
                ""
            ]
        },
        {
            "name": "apt",
            "first": [
                "apt --version"
            ],
            "end": [
                "apt update && apt upgradle"
            ],
            "files": [
                "/etc/apt/mirrors"
            ],
            "mirrors": [
                ""
            ],
            "format": [
                ""
            ]
        }
    ]
}